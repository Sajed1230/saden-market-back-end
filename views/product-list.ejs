<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Product List</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background: #f5f7fa;
            padding: 40px;
        }

        h1 {
            text-align: center;
            margin-bottom: 30px;
        }

        .products {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            justify-content: center;
        }

        .card {
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            padding: 20px;
            width: 250px;
            display: flex;
            flex-direction: column;
            align-items: center;
            text-align: center;
            position: relative;
        }

        .card img {
            width: 200px;
            height: 150px;
            object-fit: cover;
            border-radius: 8px;
            margin-bottom: 10px;
        }

        .badge {
            display: inline-block;
            padding: 4px 8px;
            background: #ffebcc;
            color: #b85b00;
            border-radius: 5px;
            font-size: 12px;
            font-weight: bold;
            margin-left: 5px;
        }

        .price {
            font-weight: bold;
            margin: 10px 0;
        }

        .original {
            text-decoration: line-through;
            color: #888;
            margin-left: 5px;
            font-weight: normal;
        }

        ul {
            text-align: left;
            padding-left: 20px;
            margin-top: 10px;
        }

        .btn {
            padding: 6px 12px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-weight: bold;
            margin: 5px;
            text-decoration: none;
            display: inline-block;
        }

        .btn-edit {
            background: #05b3a4;
            color: #fff;
        }

        .btn-delete {
            background: #e74c3c;
            color: #fff;
        }
    </style>
</head>

<body>
    <%- include('header') %>
    <h1>All Products</h1>

    <div class="products">
        <% products.forEach(product=> { %>
            <div class="card">
                <img src="<%= product.image %>" alt="<%= product.name %>" />

                <!-- Show product type -->
                <div class="type-label">
                    <%= product.type %>
                </div>

                <h3>
                    <%= product.name %>
                        <% if(product.badge){ %>
                            <span class="badge">
                                <%= product.badge %>
                            </span>
                            <% } %>
                </h3>

                <p>
                    <%= product.description %>
                </p>

                <p class="price">
                    $<%= product.currentPrice %>
                        <% if(product.originalPrice){ %>
                            <span class="original">$<%= product.originalPrice %></span>
                            <% } %>
                                <% if(product.discount){ %>
                                    <span>(<%= product.discount %>% OFF)</span>
                                    <% } %>
                </p>

                <% if(product.features && product.features.length> 0){ %>
                    <strong>Features:</strong>
                    <ul>
                        <% product.features.forEach(f=> { %>
                            <li>
                                <%= f %>
                            </li>
                            <% }) %>
                    </ul>
                    <% } %>

                        <!-- Action buttons -->
                        <div>
                            <a href="/shop/products/edit/<%= product._id %>" class="btn btn-edit">Edit</a>
                            <form action="/shop/products/delete/<%= product._id %>" method="POST" style="display:inline;">
                                <button type="submit" class="btn btn-delete"
                                    onclick="return confirm('Are you sure you want to delete this product?')">
                                    Delete
                                </button>
                            </form>
                        </div>
            </div>
            <% }) %>
    </div>

</body>

</html>